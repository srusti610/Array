//solution 1

string reverseWord(string str){
    
  //Your code here
  int i=0;
  int j=str.length()-1;
  while(i<j)
  {
      char t=str[i];
      str[i]=str[j];
      str[j]=t;
      i++;
      j--;
  }
  return str;
}

//solution 2
string reverseWord(string str){
    
  //Your code here
  int i=0;
  int j=str.length()-1;
  while(i<j)
  {
      swap(str[i],str[j]);
      i++;
      j--;
      
  }
  return str;
}


