//solution 1

pair<long long, long long> getMinMax(long long a[], int n) {
    sort(a,a+n);
   long min=a[0];
   long max=a[n-1];
   return{min,max};
   
   
   //solution 2
   pair<long long, long long> getMinMax(long long a[], int n) {
    sort(a,a+n);
    long long int min=0;
    long long int max=0;
    min=a[0];
    max=a[n-1];
    pair<long long,long long>ans;
    ans.first=min;
    ans.second=max;
    return ans;
    
}

